<ul class="pagination">
  {% if page > 1 %}
  <li class="page-item">
    <a class="page-link" href="{{ path(url, {'page': page - 1}) }}">Previous</a>
  </li>
  {% endif %}
  {% for p in range(1, nbPages) %}
    <li class="page-item {% if p == page %}active{% endif %}"">
      <a class="page-link" href="{{ path(url, {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
  {% if page < nbPages %}
  <li class="page-item">
    <a class="page-link" href="{{ path(url, {'page': page + 1}) }}">Next</a>
  </li>
  {% endif %}
</ul>
