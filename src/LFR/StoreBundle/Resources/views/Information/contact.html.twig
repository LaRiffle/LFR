{% extends "LFRStoreBundle::layout.html.twig" %}
{% block title %}
  | Contact
{% endblock %}
{% block body %}
<div id="history-page">
  {% set navbar = "LFRStoreBundle:Utils:nav.html.twig" %}
  {% set text = "LFRStoreBundle:Utils:text.html.twig" %}
  {% set image = "LFRStoreBundle:Utils:image.html.twig" %}
  {{ include(navbar, {'active': 'contact'}) }}
  <div class="container">
    <div class="row hidden-xs-down" style="height:80px;"></div>
    <div class="row" style="margin-top: 25px;">
      <div class="offset-sm-3 col-sm-6" style="text-align: center;">
        <h2>{{ include(text, {'element': data.mail.title }) }}</h2>
        <h5><a href="mailto:{{ data.mail.content.text|nl2br }}"><i class="fa fa-envelope" style="color: #BA0020;"></i> {{ include(text, {'element': data.mail.content }) }}</a></h5>
        <br /><br />
        <h2>{{ include(text, {'element': data.follow.title }) }}</h2>
        <h5><a href="https://www.facebook.com/Le-fil-rouge-1765572500142706/"><i class="fa fa-facebook-official" style="color: #BA0020;"></i> {{ include(text, {'element': data.follow.content }) }}</a></h5>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block script %}
{% if is_granted('ROLE_ADMIN') %}
  {% set edit_script = "LFRStoreBundle:Utils:edit-handler.html.twig" %}
  {{ include(edit_script) }}
{% endif %}
{% endblock %}
