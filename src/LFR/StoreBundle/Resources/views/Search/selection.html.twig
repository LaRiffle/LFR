{% extends "LFRStoreBundle:Search:layout.html.twig" %}
{% block title %}
  | Votre sélection
{% endblock %}
{% block body %}
  <div id="explore-page">
    {% set navbar = "LFRStoreBundle:Utils:nav.html.twig" %}
    {% set lateral_navbar = "LFRStoreBundle:Search:lateral.html.twig" %}
    {{ include(navbar, {'active': 'collection'}) }}
    <div class="container container-icons">
      <div class="row">
        {{ include(lateral_navbar) }}
        <div id="display_icons" class="col-lg-8 col-xl-9">
          <h2 class="selection-title">Vos créations préférées</h2>
          <div class="horizontal-scroller" style="margin-bottom: 3px;">
            <a href="#" id="show_lateral" class="show-lateral visible-to-md btn btn-default" style="z-index: 200;"><i class="fa fa-filter" aria-hidden="true"></i> Filtrer les créations</a>
          </div>
          <div>
            {% set icons = "LFRStoreBundle:Creation:index_insta.html.twig" %}
            {{ include(icons, {'creations': creations, 'filterable': 'yes'}) }}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
