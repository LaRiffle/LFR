{% if element.small_image is defined %}
{%   set src = element.small_image %}
{% else %}
{%   set src = element.image %}
{% endif %}
{% if element.credit is not empty %}
  <div class="photo-credit">
    <a href="#" data-toggle="tooltip" data-placement="right"
      title="{{ element.credit }}">
      i
    </a>
  </div>
{% endif %}
{% if class is not defined %}
    <img id="img-{{ element.id }}" src="{{ asset('uploads/img/' ~ src) }}" alt="" style="{{ style }}">
{% else %}
    <img id="img-{{ element.id }}" src="{{ asset('uploads/img/' ~ src) }}" alt="" style="{{ style }}" class="{{ class }}">
{% endif %}
{% if is_granted('ROLE_ADMIN') %}
<a  style="" class="edit-img" id="{{ element.id }}" href="{{ path('lfr_admin_image_add', {'id': element.id }) }}"><i class="fa fa-pencil-square-o"></i></a>
{% endif %}
