<div id="home-page" style="background-color: #fafafa;">
  {% set text = "LFRStoreBundle:Utils:text.html.twig" %}
  {% set image = "LFRStoreBundle:Utils:image.html.twig" %}
  {% set navbar = "LFRStoreBundle:Utils:nav.html.twig" %}
  {{ include(navbar, {'active': "none"}) }}
  <div class="container">
    <div class="row">
      <div class="offset-sm-0 col-sm-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8">
        <div class="card-deck">
          <div class="card">
            <a href="{{ path('lfr_store_explore', {'category': 'vetement'}) }}">
              {{ include(image, {'element': data.home.left_img, 'style': 'width: 100%', 'class': 'card-img-top'}) }}
            </a>
            <div class="card-block">
              <h4 class="card-title">{{ include(text, {'element': data.home.title.left }) }}</h4>
              <p class="card-text">{{ include(text, {'element': data.home.text.left }) }}</p>
              <div class="center">
                <a href="{{ path('lfr_store_explore', {'category': 'vetement'}) }}" class="btn btn-primary">
                  {{ include(text, {'element': data.home.btn.left }) }}
                </a>
              </div>
            </div>
          </div>
          <div class="card">
            <a href="{{ path('lfr_store_explore', {'category': 'accessoire'}) }}">
            {{ include(image, {'element': data.home.right_img, 'style': 'width: 100%', 'class': 'card-img-top'}) }}
            </a>
            <div class="card-block">
              <h4 class="card-title">{{ include(text, {'element': data.home.title.right }) }}</h4>
              <p class="card-text">{{ include(text, {'element': data.home.text.right }) }}</p>
              <div class="center">
                <a href="{{ path('lfr_store_explore', {'category': 'accessoire'}) }}" class="btn btn-primary">
                  {{ include(text, {'element': data.home.btn.right }) }}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="offset-sm-0 col-sm-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8">
        <div class="card">
          <div class="card-block">
            <h4 class="card-title" style="color: #BA0020;">{{ include(text, {'element': data.home.collection.title }) }}</h4>
            {% set carousel = "LFRStoreBundle:Collection:index.html.twig" %}
            {{ include(carousel) }}
          </div>
        </div>
      </div>
      <div class="offset-sm-0 col-sm-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8" style="margin-top: 20px;">
        <div class="card">
          <div class="card-block">
            <div class="horizontal-scroller" style="margin-top: -5px; float: right;">
              <a href="{{ path('lfr_store_explore') }}" class="show-lateral btn btn-default"><i class="fa fa-search" aria-hidden="true"></i> Rechercher des cr√©ations</a>
            </div>
            <h4 class="card-title" style="color: #BA0020;">{{ include(text, {'element': data.home.creation.title }) }}</h4>
            {% set icons = "LFRStoreBundle:Creation:index_insta.html.twig" %}
            {{ include(icons, {'creations': creations}) }}
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
