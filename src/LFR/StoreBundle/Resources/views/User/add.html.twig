{% extends "LFRStoreBundle::layout.html.twig" %}
{% block body %}
{% set navbar = "LFRStoreBundle:Utils:nav.html.twig" %}
{{ include(navbar, {'active': 'collection'}) }}
<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <form name="form" class="form-signin" method="post" action="{{ path('lfr_admin_user_add',{'id': id}) }}">
        <h3 class="form-signin-heading">{% if id == 0 %}Ajouter{% else %}Modifier{% endif %} un user</h3>
        {% set input_form="LFRStoreBundle:Utils:form_input.html.twig" %}
        {% set save_form="LFRStoreBundle:Utils:form_save.html.twig" %}
        {{ form_rest(form) }}
      </form>
    </div>
  </div>
</div>
{% endblock %}
